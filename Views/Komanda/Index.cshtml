@model IEnumerable<Krepsinio_varzybos.Models.Komanda>

@{
    ViewData["title"] = "Komandos";
}

<div class="main-content-header">
    <span class="title">@ViewData["title"]</span>
    <span class="actions">
        <a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
    </span>
</div>

<div class="main-content-lst">
    <table class="entity-list">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Pavadinimas)</th>
                <th>@Html.DisplayNameFor(model => model.Salis)</th>
                <th>@Html.DisplayNameFor(model => model.Miestas)</th>
                <th>@Html.DisplayNameFor(model => model.IkurimoData)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Pavadinimas)</td>
                    <td>@Html.DisplayFor(modelItem => item.Salis)</td>
                    <td>@Html.DisplayFor(modelItem => item.Miestas)</td>
                    <td>@Html.DisplayFor(modelItem => item.IkurimoData)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Redaguoti</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Šalinti</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
