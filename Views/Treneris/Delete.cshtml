@model Krepsinio_varzybos.Models.TrenerisCE

@{
    ViewData["title"] = "Komandos šalinimas";
}

<div class="main-content-header">
    <span class="title">@ViewData["title"]</span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Atgal į sarašą // Back to list
        </a>
    </span>
</div>

<div class="main-content-ced">
    @using (Html.BeginForm(FormMethod.Post, new { @class = "entity-d" }))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend class="confirm-msg">Ar tikrai norite šalinti šią komandą?</legend> // Are you sure you want to delete this team?

            <dl>
                <dt>@Html.DisplayNameFor(m => m.Treneris.Id)</dt>
                <dd>@Html.DisplayFor(m => m.Treneris.Id)</dd>

                <dt>@Html.DisplayNameFor(m => m.Treneris.Vardas)</dt>
                <dd>@Html.DisplayFor(m => m.Treneris.Vardas)</dd>

                <dt>@Html.DisplayNameFor(m => m.Treneris.Pavarde)</dt>
                <dd>@Html.DisplayFor(m => m.Treneris.Pavarde)</dd>

                <dt>@Html.DisplayNameFor(m => m.Treneris.Amzius)</dt>
                <dd>@Html.DisplayFor(m => m.Treneris.Amzius)</dd>

                <dt>@Html.DisplayNameFor(m => m.Treneris.Tautybe)</dt>
                <dd>@Html.DisplayFor(m => m.Treneris.Tautybe)</dd>

                <dt>@Html.DisplayNameFor(m => m.Treneris.Patirtis)</dt>
                <dd>@Html.DisplayFor(m => m.Treneris.Patirtis)</dd>

                <dt>@Html.DisplayNameFor(m => m.Treneris.Pareigos)</dt>
                <dd>@Html.DisplayFor(m => m.Treneris.Pareigos)</dd>
            </dl>

            @if (ViewData["deletionNotPermitted"] != null)
            {
                <div class="fail-msg">
                    <i class="fa-solid fa-circle-exclamation"></i> Šios komandos pašalinti negalima, nes
                    ji turi ryšių į priklausomas esybes.
                </div>
            }
            else
            {
                <div class="buttons">
                    <button formaction="@Url.Action("DeleteConfirm", new { id = Model.Treneris.Id })"
                            class="btn btn-danger"
                            style="white-space: nowrap;">
                        <i class="fa-solid fa-trash"></i> Šalinti
                    </button>
                </div>
            }
        </fieldset>
    }
</div>

<div class="main-content-footer">
    <span class="title"></span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Atgal į sarašą
        </a>
    </span>
</div>
