@model Krepsinio_varzybos.Models.ZaidejasCE

@{
    ViewData["title"] = "Žaidėjo šalinimas";
}

<div class="main-content-header">
    <span class="title">@ViewData["title"]</span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Atgal į sarašą // Back to the list
        </a>
    </span>
</div>

<div class="main-content-ced">
    @using (Html.BeginForm(FormMethod.Post, new { @class = "entity-d" }))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend class="confirm-msg">Ar tikrai norite šalinti šį žaidėją?</legend> // Are you sure you want to delete this player?

            <dl>
                <dt>@Html.DisplayNameFor(m => m.Zaidejas.Id)</dt>
                <dd>@Html.DisplayFor(m => m.Zaidejas.Id)</dd>

                <dt>@Html.DisplayNameFor(m => m.Zaidejas.Vardas)</dt>
                <dd>@Html.DisplayFor(m => m.Zaidejas.Vardas)</dd>

                <dt>@Html.DisplayNameFor(m => m.Zaidejas.Pavarde)</dt>
                <dd>@Html.DisplayFor(m => m.Zaidejas.Pavarde)</dd>

                <dt>@Html.DisplayNameFor(m => m.Zaidejas.Ugis)</dt>
                <dd>@Html.DisplayFor(m => m.Zaidejas.Ugis)</dd>

                <dt>@Html.DisplayNameFor(m => m.Zaidejas.Svoris)</dt>
                <dd>@Html.DisplayFor(m => m.Zaidejas.Svoris)</dd>

                <dt>@Html.DisplayNameFor(m => m.Zaidejas.Amzius)</dt>
                <dd>@Html.DisplayFor(m => m.Zaidejas.Amzius)</dd>

                <dt>@Html.DisplayNameFor(m => m.Zaidejas.GimimoVieta)</dt>
                <dd>@Html.DisplayFor(m => m.Zaidejas.GimimoVieta)</dd>

                <dt>@Html.DisplayNameFor(m => m.Zaidejas.Tautybe)</dt>
                <dd>@Html.DisplayFor(m => m.Zaidejas.Tautybe)</dd>

                <dt>@Html.DisplayNameFor(m => m.Zaidejas.Pozicija)</dt>
                <dd>@Html.DisplayFor(m => m.Zaidejas.Pozicija)</dd>
            </dl>

            @if (ViewData["deletionNotPermitted"] != null)
            {
                <div class="fail-msg">
                    <i class="fa-solid fa-circle-exclamation"></i> Šio žaidėjo pašalinti negalima, nes
                    ji turi ryšių į priklausomas esybes. // This team cannot be deleted as it has dependencies.
                </div>
            }
            else
            {
                <div class="buttons">
                    <button formaction="@Url.Action("DeleteConfirm", new { id = Model.Zaidejas.Id })"
                            class="btn btn-danger"
                            style="white-space: nowrap;">
                        <i class="fa-solid fa-trash"></i> Šalinti
                    </button>
                </div>
            }
        </fieldset>
    }
</div>

<div class="main-content-footer">
    <span class="title"></span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Atgal į sarašą // Back to the list
        </a>
    </span>
</div>
